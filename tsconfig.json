{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2020",
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
//    "paths": {
//      "@app/components": [
//        "src/components"
//      ],
//      "@app/images": [
//        "public/images"
//      ]
//    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
